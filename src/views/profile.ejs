    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home</title>
        <%- include('partials/header') %>
        <link rel="stylesheet" href="../../css/index.css">
    </head>

    <body>
        <%- include('partials/navigation') %>
        <div class="container p-4">
            <%- include('partials/success') %>
            <%- include('partials/errors') %>
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <img src="<%= user.path %>" class="card-image" style="max-width: 150px;">
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h3 class="card-text"><%= user.nick %></h3>
                                </div>
                                <div class="card-footer text-bold">
                                    <p class="card-text">Posts: <%- user.postsAccountant -%></p>
                                    <p class="card-text">Registered:
                                        <%- moment(user.registeredFrom).format('MM-DD-YYYY') -%></p>
                                    <p class="card-text">Last login:
                                        <%- moment(user.logged).format('MM-DD-YYYY') -%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-12">
                    <h3>Latest Posts of <%= user.nick %></h3>
                    <hr>
                    <div class="row">
                    <% posts.forEach(function(post){ %>
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="row no-gutters">
                                    <a href="/post/<%= post.id %>"><img src="<%= post.path %>" class="card-img"
                                            style="max-width:160px; max-height: 160px; min-height: 160px;"></a>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <a href="/post/<%= post.id %>">
                                                <h5 class="card-title"><%= post.title %></h5>
                                                <p><%- post.description -%></p>
                                            </a>
                                            <p class="card-text">
                                                <p id="description"></p>
                                                <a href="/users/profile/<%= post.userId %>"><small class="text-muted">Made
                                                        by <%= post.user %></small></a>
                                                <small class="text-muted"><%= format(post.created_at) %></small>
                                                <small class="text-muted ml-4">Views: <%- post.views -%></small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </body>

    </html>